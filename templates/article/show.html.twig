{% extends 'base.html.twig' %}

{% block title %}Article {{ article.title }}{% endblock %}

{% block body %}
    <h1 class="mb-0">{{ article.title }}</h1>
    <h2 class="h6">{{ article.slug }}</h2>
    <small>
        <b>Category:</b> {{ article.category.name }}
        {% if article.tags|length >= 1 %}
            -
            <b>Tags:</b>
            {% for tag in article.tags %}
                <a href="{{ path('tag_show', {'id': tag.id }) }}">{{ tag.name }}</a>{{ loop|last ? "" : ", " }}
            {% endfor %}
        {% endif %}
    </small>
    <p>{{ article.content }}</p>

    <a href="{{ path('article_edit', {'id': article.id}) }}">edit</a>

{% endblock %}
